  <link href="/nmns/css/main.min.css" rel="stylesheet">
  <!-- fonts -->
  <link href="/nmns/css/ko_font.min.css" rel="stylesheet">
  <link href="/nmns/css/en_font.min.css" rel="stylesheet">
</head>

<body id="page-top">

  <!-- Navigation -->
  <nav class="navbar bg-secondary navbar-shrink" id="mainNav">
    <a class="navbar-brand js-scroll-trigger" href="/">No More No Show</a>
    <button class="navbar-toggler navbar-toggler-right bg-primary text-white" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      <span class="d-none d-md-block"><if(input.user.name)>${input.user.name}</if><else>${input.user.email}</else></span>
      <i class="fa fa-bars d-block d-md-none"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item mx-0 mx-lg-1">
          <a id="myPageLink" class="btn py-2 px-0 px-lg-2 rounded godo normal w700" href="#" data-toggle="modal" data-target="#infoModal">내 매장 정보</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1">
          <a id="alrimLink" class="btn py-2 px-0 px-lg-2 rounded godo normal w700" href ="#" data-toggle="modal" data-target="#alrimModal">알림톡 정보</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1 d-block d-lg-none">
          <a class="btn py-2 px-0 px-lg-2 rounded godo normal w700 addNoShowLink" href ="#" data-toggle="modal" data-target="#noShowModal">노쇼 추가</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1 d-block d-lg-none">
          <a class="btn py-2 px-0 px-lg-2 rounded godo normal w700 getNoShowLink" href ="#" data-toggle="modal" data-target="#noShowModal">노쇼 조회</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1 d-block d-lg-none">
          <a class="btn py-2 px-0 px-lg-2 rounded godo normal w700 addReservLink" href ="#" data-toggle="modal" data-target="#reservModal">예약 추가</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1 d-block d-lg-none">
          <a class="btn py-2 px-0 px-lg-2 rounded godo normal w700 addTaskLink" href ="#" data-toggle="modal" data-target="#taskModal">일정 추가</a>
        </li>
        <li class="mr-0 ml-1 mx-lg-1">
          <a id="signoutLink" class="btn btn-flat btn-primary godo normal py-2 px-0 px-lg-2 d-block" href="/signout">로그아웃</a>
        </li>
      </ul>
    </div>
  </nav>

  <div id="mainRow" class="row">
    <div id="sidebarContainer" class="d-none d-lg-block col-2 sidebar-expanded pr-0">
      <ul class="list-group">
        <a href="#" class="addNoShowLink list-group-item list-group-item-action" data-toggle="modal" data-target="#noShowModal">
          <div class="d-flex w-100 align-items-center">
            <span class="fas fa-plus fa-fw mr-3"></span>
            <span class="menu-collapsed">노쇼 추가</span>
          </div>
        </a>
        <a href="#" class="getNoShowLink list-group-item list-group-item-action" data-toggle="modal" data-target="#noShowModal">
          <div class="d-flex w-100 align-items-center">
            <span class="fas fa-search fa-fw mr-3"></span>
            <span class="menu-collapsed">노쇼 조회</span>
          </div>
        </a>
        <a href="#" class="addReservLink list-group-item list-group-item-action" data-toggle="modal" data-target="#reservModal">
          <div class="d-flex w-100 align-items-center">
            <span class="far fa-calendar-plus fa-fw mr-3"></span>
            <span class="menu-collapsed">예약 추가</span>
          </div>
        </a>
        <a href="#" class="addTaskLink list-group-item list-group-item-action" data-toggle="modal" data-target="#taskModal">
          <div class="d-flex w-100 align-items-center">
            <span class="far fa-calendar-check fa-fw mr-3"></span>
            <span class="menu-collapsed">일정 추가</span>
          </div>
        </a>
        <li id="managerElements" class="list-group-item sidebar-separator-title d-flex">
          <div>
              <div class="lnb-calendars-item">
                  <label>
                      <input class="tui-full-calendar-checkbox-square" value="all" checked="" type="checkbox">
                      <span></span>
                      <strong>모든 담당자 보기</strong>
                  </label>
              </div>
          </div>
          <div id="managerList" class="lnb-calendars-d1">
            <div class="lnb-calendars-item"><label><input class="tui-full-calendar-checkbox-round" value="1" checked="" type="checkbox"><span style="border-color: rgb(158, 95, 255); background-color: rgb(158, 95, 255);"></span><span>My Calendar</span></label></div>
            <div class="lnb-calendars-item"><label><input class="tui-full-calendar-checkbox-round" value="2" checked="" type="checkbox"><span style="border-color: #00a9ff; background-color: #00a9ff;"></span><span>Company</span></label></div>
            <div class="lnb-calendars-item"><label><input class="tui-full-calendar-checkbox-round" value="3" checked="" type="checkbox"><span style="border-color: #ff5583; background-color: #ff5583;"></span><span>Family</span></label></div>
            <div class="lnb-calendars-item"><label><input class="tui-full-calendar-checkbox-round" value="4" checked="" type="checkbox"><span style="border-color: #03bd9e; background-color: #03bd9e;"></span><span>Friend</span></label></div>
            <div class="lnb-calendars-item"><label><input class="tui-full-calendar-checkbox-round" value="5" checked="" type="checkbox"><span style="border-color: #bbdc00; background-color: #bbdc00;"></span><span>Travel</span></label></div>
            <div class="lnb-calendars-item"><label><input class="tui-full-calendar-checkbox-round" value="6" checked="" type="checkbox"><span style="border-color: #9d9d9d; background-color: #9d9d9d;"></span><span>etc</span></label></div>
            <div class="lnb-calendars-item"><label><input class="tui-full-calendar-checkbox-round" value="7" checked="" type="checkbox"><span style="border-color: #ffbb3b; background-color: #ffbb3b;"></span><span>Birthdays</span></label></div>
            <div class="lnb-calendars-item"><label><input class="tui-full-calendar-checkbox-round" value="8" checked="" type="checkbox"><span style="border-color: #ff4040; background-color: #ff4040;"></span><span>National Holidays</span></label></div>
          </div>
        </li>
      </ul>
    </div>
    <div id="mainContents" class="col bg-light">
      <div id="mainCalendarTools">
        <span id="renderRange"></span>
        <span class="dropdown">
          <button id="calendarTypeDropdown" class="btn btn-default btn-sm btn-flat dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i id="calendarTypeIcon"></i>
            <span id="calendarTypeName"></span>
            <i class="tui-full-calendar-dropdown-arrow"></i>
          </button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="calendarTypeDropdown">
          </ul>
        </span>
      </div>
      <div id="mainCalendar"></div>
    </div>
    
  </div>
  <!-- Footer -->
  <footer class="footer text-center px-0 bg-dark">
    <div class="py-4 text-center text-white">
      <div class="container">
        <small>Copyright &copy; nomorenoshow.com 2018</small>
      </div>
    </div>
  </footer>

  <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
  <div class="scroll-to-top d-lg-none position-fixed ">
    <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
      <i class="fas fa-chevron-up"></i>
    </a>
  </div>

