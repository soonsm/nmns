  <script src="/lib/jquery/jquery.min.js"></script>
  <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script src="/lib/jquery-validation/jquery.validate.min.js"></script>
  <script src="/lib/tui-calendar/tui-code-snippet.min.js"></script>
  <script src="/lib/tui-calendar/tui-time-picker.min.js"></script>
  <script src="/lib/tui-calendar/tui-date-picker.min.js"></script>
  <script src="/lib/tui-calendar/tui-calendar.min.js"></script>
  <script src="/lib/socket.io/socket.io.slim.js"></script>
  <script src="/lib/font-awesome/js/all.min.js"></script>
  <script src="/lib/font-awesome/js/v4-shims.min.js"></script>
  <script src="/lib/moment/moment-with-locales.min.js"></script>
  <script src="/lib/moment/locales.min.js"></script>
  <!-- Custom scripts for this template -->
  <script src="/nmns/js/main.min.js"></script>
</body>
</html>
