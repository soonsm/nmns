<body id="page-top">

  <!-- Navigation -->
  <nav class="navbar bg-secondary navbar-shrink" id="mainNav">
    <a class="navbar-brand js-scroll-trigger" href="/">No More No Show</a>
    <button class="navbar-toggler navbar-toggler-right btn-primary text-white round-0" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      <span class="d-none d-md-block"><if(input.user.name)>${input.user.name}</if><else>${input.user.email}</else></span>
      <i class="fa fa-bars d-block d-md-none"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item mx-0 mx-lg-1">
          <a id="myPageLink" class="btn py-2 px-0 px-lg-2 rounded godo normal w700" href="#" data-toggle="modal" data-target="#infoModal">내 매장 정보</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1">
          <a id="alrimLink" class="btn py-2 px-0 px-lg-2 rounded godo normal w700" href ="#" data-toggle="modal" data-target="#alrimModal">알림톡 정보</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1 d-block d-lg-none">
          <a class="btn py-2 px-0 px-lg-2 rounded godo normal w700 addNoShowLink" href ="#" data-toggle="modal" data-target="#noShowModal">노쇼 추가</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1 d-block d-lg-none">
          <a class="btn py-2 px-0 px-lg-2 rounded godo normal w700 getNoShowLink" href ="#" data-toggle="modal" data-target="#noShowModal">노쇼 조회</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1 d-block d-lg-none">
          <a class="btn py-2 px-0 px-lg-2 rounded godo normal w700 addReservLink" href ="#" data-toggle="modal" data-target="#reservModal">예약 추가</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1 d-block d-lg-none">
          <a class="btn py-2 px-0 px-lg-2 rounded godo normal w700 addTaskLink" href ="#" data-toggle="modal" data-target="#taskModal">일정 추가</a>
        </li>
        <li class="mr-0 ml-1 mx-lg-1">
          <a id="signoutLink" class="btn btn-flat btn-primary godo normal py-2 px-0 px-lg-2 d-block" href="/signout">로그아웃</a>
        </li>
      </ul>
    </div>
  </nav>

  <div id="mainRow" class="row col px-0 mx-auto">
    <div id="sidebarContainer" class="d-none d-lg-block col-2 sidebar-expanded px-0">
      <ul class="list-group">
        <a href="#" class="addNoShowLink list-group-item list-group-item-action rounded-0 border-left-0 border-right-0" data-toggle="modal" data-target="#noShowModal">
          <div class="d-flex w-100 align-items-center">
            <span class="fas fa-plus fa-fw mr-3"></span>
            <span class="menu-collapsed">노쇼 추가</span>
          </div>
        </a>
        <a href="#" class="getNoShowLink list-group-item list-group-item-action rounded-0 border-left-0 border-right-0" data-toggle="modal" data-target="#noShowModal">
          <div class="d-flex w-100 align-items-center">
            <span class="fas fa-search fa-fw mr-3"></span>
            <span class="menu-collapsed">노쇼 조회</span>
          </div>
        </a>
        <a href="#" class="addReservLink list-group-item list-group-item-action rounded-0 border-left-0 border-right-0" data-toggle="modal" data-target="#reservModal">
          <div class="d-flex w-100 align-items-center">
            <span class="far fa-calendar-plus fa-fw mr-3"></span>
            <span class="menu-collapsed">예약 추가</span>
          </div>
        </a>
        <a href="#" class="addTaskLink list-group-item list-group-item-action rounded-0 border-left-0 border-right-0" data-toggle="modal" data-target="#taskModal">
          <div class="d-flex w-100 align-items-center">
            <span class="far fa-calendar-check fa-fw mr-3"></span>
            <span class="menu-collapsed">일정 추가</span>
          </div>
        </a>
        <li id="managerElements" class="list-group-item sidebar-separator-title rounded-0 border-left-0 border-right-0">
          <div class="border-bottom">
              <div class="lnbManagerItem">
                  <label>
                      <input class="tui-full-calendar-checkbox-square" value="all" checked="" type="checkbox">
                      <span></span>
                      <small>모든 담당자 보기</small>
                  </label>
              </div>
          </div>
          <div id="managerList" class="lnb-calendars-d1">
          </div>
        </li>
      </ul>
    </div>
    <div id="mainContents" class="col bg-light pr-0">
      <div id="mainCalendarTools" class="text-center align-middle">
        <button class="btn bg-transparent btn-sm moveDate" data-action="prev" type="button"><i class="fas fa-chevron-left"></i></button>
        <span id="renderRange" class="align-middle mx-2"></span>
        <button class="btn bg-transparent btn-sm moveDate" data-action="next" type="button"><i class="fas fa-chevron-right"></i></button>
        <div class="btn-group btn-group-sm position-absolute py-2 d-none d-md-inline-flex calendarTypeGroup" role="group" aria-label="캘린더 종류">
          <button type="button" class="btn btn-light btn-flat calendarType" data-action="toggle-daily"><i class="fas fa-bars"></i> 1일</button>
          <button type="button" class="btn btn-light btn-flat calendarType" data-action="toggle-weekly"><i class="fas fa-bars fa-rotate-90"></i> 1주</button>
          <button type="button" class="btn btn-light btn-flat calendarType" data-action="toggle-monthly"><i class="fas fa-th"></i> 1달</button>
        </div>
        <div class="btn-group btn-group-sm d-inline-flex d-md-none position-absolute py-2 calendarTypeGroup" role="group">
          <button id="calendarTypeMenu" type="button" class="btn btn-light btn-flat calendarType dropdown-toggle" data-action="toggle-weekly" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-bars"></i> 1일
          </button>
          <div class="dropdown-menu" aria-labelledby="calendarTypeMenu">
            <a class="dropdown-item" href="#"><i class="fas fa-bars fa-rotate-90"></i> 1주</a>
            <a class="dropdown-item" href="#"><i class="fas fa-th"></i> 1달</a>
          </div>
        </div>
      </div>
      <div id="mainCalendar"></div>
    </div>
    
  </div>
