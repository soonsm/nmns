    <div id="infoModal" class="modal fade" tabIndex="-1" role="dialog" aria-labelledby="#infoModalTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content rounded-0">
          <div class="modal-header">
            <h5 id="infoModalTitle">내 매장 정보</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="infoForm">
              <div class="form-group">
                <div class="row mb-2">
                  <label for="infoEmail" class="col-3 col-form-label col-form-label-sm">이메일</label>
                  <div class="col-9 py-1 px-0">
                    <span id="infoEmail"></span>
                    <span id="infoAuthStatus" class="pl-2"></span>
                    <span id="infoAccountStatus" class="pl-2"></span>
                  </div>
                </div>
                <div class="row mb-2">
                  <label for="infoShopName" class="col-3 col-form-label col-form-label-sm">매장이름</label>
                  <div class="col-9 pl-0">
                    <input id="infoShopName" type="text" placeholder="매장이름" class="form-control form-control-sm rounded-0"/>
                  </div>
                </div>
                <div class="row mb-2">
                  <label for="infoBizBeginTime" class="col-3 col-form-label col-form-label-sm">매장운영시간</label>
                  <div class="col-9 pl-0">
                    <div class="col-5 px-0 d-inline-block">
                      <div id="infoBizBeginTimePicker" class="input-group input-group-sm" data-target-input="nearest">
                        <div class="input-group-prepend" data-target="#infoBizBeginTimePicker" data-toggle="datetimepicker">
                          <i id="infoBizBeginTimeIcon" class="input-group-text far fa-clock rounded-0"></i>
                        </div>
                        <input id="infoBizBeginTime" class="form-control datetimepicker-input rounded-0" data-target="#infoBizBeginTimePicker" aria-describedby="infoBizBeginTimeIcon"/>
                      </div>
                    </div>
                    <span class="px-2 pt-1">—</span>
                    <div class="col-5 px-0 d-inline-block">
                      <div id="infoBizEndTimePicker" class="input-group input-group-sm" data-target-input="nearest">
                        <div class="input-group-prepend" data-target="#infoBizEndTimePicker" data-toggle="datetimepicker">
                          <i id="infoBizEndTimeIcon" class="input-group-text far fa-clock rounded-0"></i>
                        </div>
                        <input id="infoBizEndTime" class="form-control datetimepicker-input rounded-0" data-target="#infoBizEndTimePicker" aria-describedby="infoBizEndTimeIcon"/>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row mb-2">
                  <label for="infoBizType" class="col-3 col-form-label col-form-label-sm">업종</label>
                  <div class="col-9 col-md-4 pl-0">
                    <input id="infoBizType" type="text" placeholder="업종" class="form-control form-control-sm rounded-0"/>
                  </div>
                </div>
                <div class="form-group">
                  <label for="infoManagerList" class="col-form-label col-form-label-sm">담당자 관리</label>
                  <div id="infoManagerList" class="col-9 col-sm-8"></div>
                  <div class="pl-4 btn addManager">
                    <p class="text-secondary align-top mb-0">
                      <i class="fas fa-plus"></i> 담당자 추가하기
                    </p>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" id="infoModalRefresh" class="btn btn-light btn-flat">초기화</button>
            <button type="button" class="btn btn-light btn-flat" data-dismiss="modal">취소</button>
            <button type="button" id="infoModalSave" class="btn btn-primary btn-flat">저장</button>
